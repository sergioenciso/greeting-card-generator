                        <option value="holiday">Holiday</option>
                        <option value="just because">Just Because</option>
                    </select>
                </div>

                <!-- Recipient Name -->
                <div>
                    <label for="recipientName" class="block text-sm font-medium dynamic-text-secondary mb-2">
                        Recipient's name
                    </label>
                    <input type="text" id="recipientName" name="recipientName" 
                           placeholder="Enter their name" 
                           class="liquid-input input-field dynamic-button-text" required>
                </div>

                <!-- Relationship -->
                <div>
                    <label for="relationship" class="block text-sm font-medium dynamic-text-secondary mb-2">
                        Your relationship to them
                    </label>
                    <select id="relationship" name="relationship" class="liquid-input select-field dynamic-button-text" required>
                        <option value="">Select relationship...</option>
                        <option value="friend">Friend</option>
                        <option value="best friend">Best Friend</option>
                        <option value="family member">Family Member</option>
                        <option value="sibling">Sibling</option>
                        <option value="parent">Parent</option>
                        <option value="grandparent">Grandparent</option>
                        <option value="spouse">Spouse</option>
                        <option value="partner">Partner</option>
                        <option value="colleague">Colleague</option>
                        <option value="boss">Boss</option>
                        <option value="neighbor">Neighbor</option>
                        <option value="acquaintance">Acquaintance</option>
                    </select>
                </div>

                <!-- Tone -->
                <div>
                    <label for="tone" class="block text-sm font-medium dynamic-text-secondary mb-2">
                        Message style
                    </label>
                    <select id="tone" name="tone" class="liquid-input select-field dynamic-button-text" required>
                        <option value="">Choose a style...</option>
                        <option value="gentle">Warm and heartfelt</option>
                        <option value="moderate">Friendly with humor</option>
                        <option value="savage">Playful and witty</option>
                        <option value="mystery">âœ¨ Surprise me</option>
                    </select>
                </div>

                <!-- Submit Button -->
                <button type="submit" id="generateBtn" class="btn-primary w-full dynamic-button-text">
                    <span id="btnText">Generate Message</span>
                    <span id="btnLoader" class="hidden">
                        Generating
                        <div class="loading-dots">
                            <span></span>
                            <span></span>
                            <span></span>
                        </div>
                    </span>
                </button>
            </form>
        </div>

        <!-- Result Area -->
        <div id="resultArea" class="hidden liquid-glass-strong rounded-3xl p-8">
            <h3 class="font-display text-2xl font-bold dynamic-text-primary mb-4">Your Personalized Message:</h3>
            <div id="generatedMessage" class="liquid-glass p-6 rounded-2xl mb-4 dynamic-text-primary leading-relaxed"></div>
            <p id="disclaimer" class="text-xs dynamic-text-muted italic mb-4"></p>
            <div class="flex flex-wrap gap-3">
                <button onclick="copyMessage()" class="liquid-button px-4 py-2 rounded-xl text-sm font-medium">
                    ðŸ“‹ Copy Message
                </button>
                <button onclick="generateAnother()" class="liquid-button px-4 py-2 rounded-xl text-sm font-medium">
                    ðŸŽ² Generate Another
                </button>
                <button onclick="changeTheme()" class="liquid-button px-4 py-2 rounded-xl text-sm font-medium">
                    ðŸŽ¨ New Colors
                </button>
            </div>
        </div>

        <!-- Footer -->
        <div class="text-center mt-12 dynamic-text-muted text-sm">
            <p>Powered by AI to help you express yourself perfectly</p>
            <p class="mt-2">Â© 2025 Write a Greeting For Me</p>
        </div>
    </div>

    <script>
        // Theme randomization
        const themes = [
            'theme-sunset', 'theme-ocean', 'theme-forest', 'theme-aurora', 
            'theme-cosmic', 'theme-peachy', 'theme-mint', 'theme-lavender',
            'theme-golden', 'theme-tropical'
        ];
        
        // Set random theme on page load
        function setRandomTheme() {
            const randomTheme = themes[Math.floor(Math.random() * themes.length)];
            document.getElementById('body').className = document.getElementById('body').className.replace(/theme-\w+/g, '') + ' ' + randomTheme;
        }
        
        // Create floating particles
        function createParticles() {
            const particlesContainer = document.getElementById('particles');
            const particleCount = 15;
            
            for (let i = 0; i < particleCount; i++) {
                const particle = document.createElement('div');
                particle.className = 'particle';
                particle.style.left = Math.random() * 100 + '%';
                particle.style.width = Math.random() * 6 + 2 + 'px';
                particle.style.height = particle.style.width;
                particle.style.animationDelay = Math.random() * 20 + 's';
                particle.style.animationDuration = (Math.random() * 10 + 15) + 's';
                particlesContainer.appendChild(particle);
            }
        }
        
        // Initialize on page load
        document.addEventListener('DOMContentLoaded', function() {
            setRandomTheme();
            createParticles();
        });
        
        // Add theme change button functionality
        function changeTheme() {
            setRandomTheme();
        }
    </script>
    <script src="/app.js"></script>
</body>
</html>